---
import { Icon } from "astro-iconify";

const { question, answer } = Astro.props;

---

<div>
  <p class="mb-4 text-xl font-bold">
    <Icon
      name={Astro.props.icon ?? "tabler:arrow-down-right"}
      class="w-7 h-7 text-primary-500 inline-block icon-bold"
    />
    {question}
  </p>
  <div class="text-gray-700 dark:text-gray-400 prose">
    <slot />
  </div>
</div>
