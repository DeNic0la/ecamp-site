---
import "~/assets/styles/base.css";

import MetaTags from "~/components/core/MetaTags.astro";
import BasicScripts from "~/components/core/BasicScripts.astro";

const { meta = {} } = Astro.props;
const {
  locale
} = Astro.params
const language = locale?.toString() || 'en'
---

<!DOCTYPE html>
<html lang={language} class="motion-safe:scroll-smooth 2xl:text-[20px] bg-white dark:bg-slate-900">
  <head>
    <MetaTags {...meta} />
  </head>

  <body>
    <div class="page antialiased text-gray-900 dark:text-slate-300">
      <slot />
      <BasicScripts />
    </div>
  </body>
</html>
